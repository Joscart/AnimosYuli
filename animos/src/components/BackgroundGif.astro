---
interface Props {
  gifSrc: string;
}

const { gifSrc } = Astro.props;
---

<div class="background-gif">
  <img src={gifSrc} alt="Background" />
</div>

<style>
  .background-gif {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }

  .background-gif img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>
